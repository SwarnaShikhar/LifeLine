<% layout('layouts/boilerplate') %>
    <h1>
      Name:  <%= plasmaLink.name %>
    </h1>
    <h2>
       Location: <%= plasmaLink.location %>
    </h2>
    <h2>
       Blood Group is: <%= plasmaLink.bloodGroup %>
     </h2>
     <h2>
        Phone Number: <%= plasmaLink.phoneNo %>
     </h2>
     <h2>
        Age is: <%= plasmaLink.age %>
     </h2>
     <h2>
        Aadhar Number is: <%= plasmaLink.AadharNo %>
     </h2>
     <h2>
        District Name: <%= plasmaLink.DistrictName %>
     </h2>
    <h2>
        Submitted by-><%= plasmaLink.author.username %>
    </h2>
    <% if(currentUser && plasmaLink.author.equals(currentUser._id)){ %>
        <div>
            <p>
                <a href="/plasmaLinks/<%= plasmaLink._id %>/edit">Edit</a>
            </p>
            <p>
            <form action="/plasmaLinks/<%= plasmaLink._id %>?_method=DELETE" method="POST">
                <button>DELETE</button>
            </form>
        </div>
     <% } %>
            </p>
            <footer>
                </form>
                <a href="/plasmaLinks">All Datas</a>
            </footer>